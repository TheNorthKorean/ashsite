# Netlify Forms Configuration

# Enterprise Contact Form
[[forms]]
  name = "enterprise-contact"
  [forms.fields]
    [forms.fields.firstName]
      type = "text"
      required = true
    [forms.fields.lastName]
      type = "text"
      required = true
    [forms.fields.email]
      type = "email"
      required = true
    [forms.fields.company]
      type = "text"
      required = true
    [forms.fields.phone]
      type = "tel"
      required = true
    [forms.fields.practiceSize]
      type = "select"
      required = true
    [forms.fields.message]
      type = "textarea"

